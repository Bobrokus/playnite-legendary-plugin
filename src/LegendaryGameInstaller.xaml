<UserControl x:Class="LegendaryLibraryNS.LegendaryGameInstaller"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LegendaryLibraryNS"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:pcon="clr-namespace:Playnite.Converters"
    xmlns:pcmd="clr-namespace:Playnite.Commands"
    mc:Ignorable="d" Name="LegendaryGameInstallerUC" Loaded="LegendaryGameInstallerUC_Loaded"
    d:DesignHeight="220" d:DesignWidth="600">

    <UserControl.Resources>
        <pcon:NegateConverter x:Key="NegateConverter" />
        <sys:Boolean x:Key="True">True</sys:Boolean>
        <sys:Boolean x:Key="False">False</sys:Boolean>
    </UserControl.Resources>
    <DockPanel Margin="10">
        <Grid VerticalAlignment="Top" DockPanel.Dock="Top" Name="InstallerPage">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label Content="{DynamicResource LOCGameInstallDirTitle}" Grid.Row="0"></Label>
            <DockPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,0,15">
                <Button DockPanel.Dock="Right" Padding="5" Margin="5 0 0 0" Content="📁"
                    Name="ChooseGamePath" Click="ChooseGamePath_Click" />
                <TextBox Name="SelectedGamePathTxtBox" Text="" VerticalAlignment="Top" Margin="0,5" />
            </DockPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="2"
                Name="DSizePanel" Grid.Column="0">
                <Label Content="{DynamicResource LOCLegendaryDownloadSize}" VerticalAlignment="Top"
                    HorizontalAlignment="Left" Margin="0,0,0,5" />
                <Label x:Name="downloadSize" Content="{DynamicResource LOCLoadingLabel}"
                    VerticalAlignment="Top" Margin="5,0,0,0" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Name="ISizePanel" Grid.Row="3" Grid.Column="0">
                <Label VerticalAlignment="Top" Content="{DynamicResource LOCLegendaryInstallSize}" />
                <Label x:Name="installSize" Content="{DynamicResource LOCLoadingLabel}"
                    VerticalAlignment="Top" Margin="5,0,0,0" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2"
                Grid.Column="1">
                <Label VerticalAlignment="Top"
                    Content="{DynamicResource LOCLegendarySpaceAvailable}" />
                <Label VerticalAlignment="Top" Content="{DynamicResource LOCLoadingLabel}"
                    Margin="5,0,0,0" Name="spaceLabel" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0"
                VerticalAlignment="Bottom" Grid.Row="4" Grid.Column="2" Name="SAPanel">
                <Button x:Name="cancelButton" Content="{DynamicResource LOCCancelLabel}"
                    HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,5,0"
                    Click="CancelButton_Click" IsCancel="True" />
                <Button x:Name="importButton" Content="{DynamicResource LOCLegendaryImportEGL}"
                    HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,5,0"
                    Click="ImportButton_Click" />
                <Button x:Name="installButton" Content="{DynamicResource LOCInstallGame}"
                    HorizontalAlignment="Right" VerticalAlignment="Bottom"
                    Click="InstallButton_Click" IsEnabled="False" />
            </StackPanel>
        </Grid>
        <Grid Name="DownloaderPage" VerticalAlignment="Top" DockPanel.Dock="Top" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Top" Margin="0,5,0,10">
                <ProgressBar Value="0" Name="DProgressBar"/>
                <Label HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{Binding ElementName=DProgressBar, Path=Value, StringFormat={}{0:0}%}" IsEnabled="True">
                    </TextBlock>
                </Label>
            </Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Top">
                <Label Content="{DynamicResource LOCLegendaryDownloadSpeed}"></Label>
                <Label Name="DownloadSpeedLabel" HorizontalAlignment="Left" Margin="5,0,0,0"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Top">
                <Label Content="{DynamicResource LOCLegendaryDownloaded}"></Label>
                <Label Name="DownloadedLabel" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" Margin="5,0,0,0"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="4" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Top">
                <Label Content="{DynamicResource LOCLegendaryElapsed}"></Label>
                <Label Name="ElapsedLabel" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" Margin="5,0,0,0"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="5" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Top">
                <Label Content="{DynamicResource LOCLegendaryETA}"></Label>
                <Label Name="ETALabel" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left"  Margin="5,0,0,0"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="7" Grid.Column="1">
                <Button x:Name="CancelDownloadButton" Content="{DynamicResource LOCCancelLabel}"
                    HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,5,0" IsCancel="True" Click="CancelDownloadButton_Click" />
                <Button x:Name="PauseButton" Content="{DynamicResource LOCLegendaryPauseDownload}"
                    HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="PauseButton_Click"></Button>
            </StackPanel>
        </Grid>
    </DockPanel>
</UserControl>